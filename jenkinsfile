pipeline {
    agent {
  label 'Ansible'
          }

    stages {
        stage('Checkout') { // добавим новый Stage
            steps {
                git branch: 'main', url: "git@github.com:A26Belov/ansible.git" // используем встроенный в Jenkins плагин Git для скачивания проекта из бранча main
            }
        }
        stage('Deploy') {
            steps {
                sh 'ansible-playbook pl-book0.yml' // поскольку скрипты работают в одной папке, на втором шаге мы можем просто запустить плейбук
            }
        }
    }
}